@model IEnumerable<CoverType> 
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container pt-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
</div>
<hr />
<table class="table table-bordered border-secondary table-dark table-striped" style="width:100%">
    <thead>
        <tr class="text-secondary">
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var coverType in Model)
        {
        <tr>
            <td width="70%">@coverType.Name</td>
            <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@coverType.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="CoverType" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@coverType.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
            </td>
        </tr> 
        }
    </tbody>
</table>