@model CoverType

<form method="post" asp-action="Edit">
    <div class="border-1 border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary ">Edit CoverType</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px">Update</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-dark" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
